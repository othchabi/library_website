{% extends 'layoutgeneral.html.twig' %}

{% block title %}Auteurs - bookland{% endblock %}

{% block body %}
    <section class="portfolio-block block-intro">
        <div class="container">
            <h1 style="text-align: left;">Liste des auteurs :</h1>
            <div class="card">
                <div class="card-header py-3">
                    <a class="btn btn-primary float-end" href="{{ path('auteur_new') }}">Ajouter auteur</a>

                    <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample"
                            style="
    margin-left: -80%;
">
                        <i class="fa fa-filter"></i>
                    </button>


                    <div class="collapse" id="collapseExample" style="
    margin-top: 9px;
">
                        <div class="card card-body" style="
    background-color: inherit;
    border: 0;
">
                            <button class="btn btn-info" type="button" style="margin-right: 70%;"><a class="link-light"
                                                                                                     href="{{ path('auteur_plus_trois_livres') }}">
                                    Auteurs avec au moins 3 livres
                                </a>
                            </button>
                        </div>
                    </div>


                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Nom Prénom</th>
                                <th>Sexe</th>
                                <th>Date naissance</th>
                                <th>Nationalité</th>
                                <th>Détails</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for auteur in auteurs %}
                                <tr>
                                    <td>{{ auteur.getNomPrenom() }}</td>
                                    <td>{{ auteur.getSexe() }}</td>
                                    <td>{{ auteur.getDateDeNaissance()|date('Y-m-d') }}</td>
                                    <td>{{ auteur.getNationalite() }}</td>
                                    <td>
                                        <a href="{{ path('auteur_show', {'id': auteur.id}) }}">
                                            <button class="btn btn-info btn-sm" type="button"><i class="fa fa-info"></i>
                                            </button>
                                        </a>
                                        <a href="{{ path('auteur_genres_chrono', {'id': auteur.id}) }}">
                                            <button class="btn btn-info btn-sm" type="button">
                                                Genres chronologique
                                            </button>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="{{ path('auteur_edit', {'id': auteur.id}) }}">
                                            <button class="btn btn-primary btn-sm" type="button"><i
                                                        class="fa fa-edit"></i></button>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
