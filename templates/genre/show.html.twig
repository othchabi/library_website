{% extends 'layoutgeneral.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
    <section class="portfolio-block block-intro">
        <div class="container">
            <div class="card">
                <div class="card-header py-3">
                    <h1 style="text-align: left;">Détails genre</h1>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Nom</th>
                            <td>{{ genre.nom }}</td>
                        </tr>
                        <tr>
                <th>Auteur Genre </th>
                <td> 
                                
                                    {% for auteur in auteurs %}
                                    <li>{{ auteur.nomPrenom }} </li>
                                    
                                   
                                    {% else %}
                                        <li> Aucun auteur trouvé  </li>
                         {% endfor %}
                        



                            </td>
                        </tr>

                        </tbody>
                    </table>
                    <a href="{{ path('genre_index') }}">
                        <div class="btn-group" role="group">
                            <button class="btn btn-primary" type="button">Retour à la liste</button>
                            <button class="btn btn-primary" type="button"><i class="fas fa-step-backward"></i></button>
                        </div>
                    </a>
                    &nbsp;&nbsp;
                    <a href="{{ path('genre_edit', {'id': genre.id}) }}">
                        <div class="btn-group" role="group">
                            <button class="btn btn-primary" type="button">Modifier</button>
                            <button class="btn btn-primary" type="button"><i class="far fa-edit"></i></button>
                        </div>
                    </a>
                    {{ include('genre/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}